<% layout("/layouts/boilerplate") %>

<div class="auth-card" style="max-width: 500px;"> <div class="auth-header">
        <h2>Join Roamr</h2>
        <p class="mb-0 opacity-75">Create an account to start exploring</p>
    </div>
    <div class="auth-body">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="auth-form-group">
                <label for="username" class="form-label fw-semibold">Username</label>
                <input name="username" id="username" type="text" class="auth-input" placeholder="Choose a username" required>
                <span class="auth-icon"><i class="fa-solid fa-user"></i></span>
            </div>
            <div class="auth-form-group">
                <label for="email" class="form-label fw-semibold">Email</label>
                <input name="email" id="email" type="email" class="auth-input" placeholder="Enter email" required>
                <span class="auth-icon"><i class="fa-solid fa-envelope"></i></span>
            </div>
            <div class="auth-form-group">
                <label for="password" class="form-label fw-semibold">Password</label>
                <input name="password" id="password" type="password" class="auth-input" placeholder="Create a password" required>
                <span class="auth-icon"><i class="fa-solid fa-lock"></i></span>
                <span class="password-toggle" onclick="togglePassword()"><i class="fa-solid fa-eye"></i></span>
            </div>
            <button type="submit" class="btn-signup btn-auth">Sign Up</button>

              <div class="text-center mt-4 pt-3 border-top">
                <p class="text-muted small">
                    Already have an account? <a href="/login" class="fw-bold text-decoration-none" style="color: #2b7cff;">Login</a>
                </p>
            </div>
        </form>
    </div>
</div>